<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>87 RFG</th>
      <th>89 RFG</th>
      <th>93 RFG</th>
      <th>LSD (Diesel)</th>
      <th>Dyed ULSD (Diesel)</th>
      <th>Undyed ULSD (Diesel)</th>
      <th>Heating Oil</th>
      <th>Kerosene</th>
      <th>Action</th>

    </tr>
  </thead>
  <% @fuel_prices.each do |f|%>
  <tbody>
    <tr class="gradeX">
      <td class="mycell col-md-1">
        <strong><%= f.created_at.strftime('%F') %></strong>
      </td>
      <td class="mycell col-md-1">
        <% if f.expired %>
          <span class="label label-danger %>">Expired</span>
          <%else%>
          <span class="label label-success %>">Latest</span>
          <%end%>
      </td>
      <% f.fuel_products.each do |p| %>
      <td class="mycell col-md-1">
        <% if p.fuel == '87 RFG' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == '89 RFG' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == '93 RFG' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == 'Low Sodium Diesel' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == 'Dyed ULS Diesel' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == 'Undyed ULS Diesel' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == 'Heating Oil' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <td class="mycell col-md-1">
        <% if p.fuel == 'Kerosene' %>
          <strong><%= "$ #{p.price}" %></strong>
        <%else%>
          <span class="label label-warning %>"> Not set</span>
      <%end%>
      </td>
      <%end%>
      <td class="mycell col-md-1">
        <% if f.expired %>
        <span class="label label-danger %>">Cannot Edit</span>
        <%else%>
        <%= link_to edit_supplier_fuel_price_path(f), remote: true do %>
            <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#newFuelPrice">Edit</button>
          <%end%>
        <%end%>
      </td>

    </tr>

    <%end%>
  </tbody>

</table>
