<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Contacts</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", supplier_dashboard_path%>
      </li>
      <li class="active">
        <strong>Contacts</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="">
          <%= link_to "New Contact", new_supplier_contact_path, class: "btn btn-primary"%>
        </div>
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Cell Number</th>
              <th>87OCT Margin</th>
              <th>91OCT Margin</th>
              <th>93OCT Margin</th>
              <th>Diesel Margin</th>
              <th>Action</th>


            </tr>
          </thead>
          <% @contacts.each do |contact|%>
          <tbody>
            <tr class="gradeX">
              <td class="mycell col-md-2"><%= contact.first_name + " " + contact.last_name  %></td>
              <td class="mycell col-md-2"><%= contact.cell_number%></td>
              <td class="mycell col-md-1"><%= contact.c_regular %></td>
              <td class="mycell col-md-1"><%= contact.c_medium %></td>
              <td class="mycell col-md-1"><%= contact.c_premium %></td>
              <td class="mycell col-md-1"><%= contact.c_diesel %></td>
              <td class="mycell col-md-1"><%= link_to "View", supplier_contact_path(contact), class: "btn btn-success btn-xs"%></td>

            </tr>
<%end%>
          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>
