<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Contacts</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", supplier_dashboard_path %>
      </li>
      <li class="active">
        <strong>Contacts</strong>
      </li>
        <%= link_to new_supplier_contact_path, class: "pull-right btn btn-success" do %>
        <i class="fa fa-plus"></i><strong>&nbsp;New Contact</strong>
        <%end%>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row">
  <% @contacts.each do |contact| %>
    <div class="col-lg-6">

      <div class="contact-box">
        <%= link_to supplier_contact_path(contact) do %>
        <div class="col-sm-4">
          <div class="text-center">
            <%=image_tag( avatar_url(contact), class: "img-circle m-t-xs img-responsive")%>
          </div>
        </div>
        <div class="col-sm-8">
          <h3>
            <strong><%= contact_full_name(contact)%></strong>
          </h3>
          <address>
            <strong>Fuel Margin Formulas</strong><br>

            <strong>Regular:</strong> $<%= contact.c_regular %><br>
            <strong>Medium:</strong> $<%= contact.c_medium %><br>
            <strong>Premium:</strong> $<%= contact.c_premium %><br>
            <strong>Diesel:</strong> $<%= contact.c_diesel %><br>
            <strong>Delivery:</strong> $<%= contact.c_delivery %><br>
            <abbr title="Phone"><strong><i class="fa fa-phone"></i></strong></abbr>
            <%= contact.cell_number %>
          </address>

        </div>
        <%end%>
        <div class="clearfix"></div>

      </div>

    </div>
<%end%>

  </div>


</div>

<% content_for :javascript do %>

<script type="text/javascript">

  $(function () {

    $('.contact-box').each(function () {
      animationHover(this, 'pulse');
    });

  });
</script>

<% end %>
