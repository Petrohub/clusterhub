<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2><%= current_user.first_name %>'s Dashboard</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to "Home", supplier_dashboard_path %>
            </li>
            <li class="active">
                <strong>Contacts</strong>
            </li>
            <%= link_to "Add New", new_supplier_contact_path, class: "btn btn-primary pull-right"%>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
  <% @contacts.each do |contact| %>
      <div class="col-lg-4">
          <div class="contact-box center-version">

              <%= link_to supplier_contact_path(contact) do %>

                  <img alt="image" class="img-circle" src="<%= image_path('person_placeholder.png') %>">


                  <h3 class="m-b-xs"><strong><%=contact_full_name(contact) %></strong></h3>

                  <div class="font-bold"><%= contact.business_name%></div>
                  <address class="m-t-md">
                      <strong>Mobile:<%=  contact.cell_number %></strong><br>
                    <%=   contact.street_address %><br>
                      <%= contact.city%>,<%=contact.state %> , <%= contact.zip_code%><br>
                      <abbr title="Phone">Phone:</abbr><%= contact.phone_number%>
                  </address>

              <%end%>
              <div class="contact-box-footer">
                <h1>Margins</h1>
                  <div class="m-t-xs btn-group">
                     <%= link_to "87: #{contact.c_regular}", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                     <%= link_to "91: #{contact.c_medium}", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                     <%= link_to "93: #{contact.c_premium}", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                     <%= link_to "Diesel: #{contact.c_diesel}", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                     <%= link_to "Delivery: #{contact.c_delivery}", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                     <%= link_to "Edit", edit_supplier_contact_path(contact), class: "btn btn-xs btn-white" %>
                  </div>
              </div>
          </div>
      </div>
<%end%>
</div>

</div>
