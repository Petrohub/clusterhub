<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Contacts</h2>
        <ol class="breadcrumb">
            <li>
                <%= link_to "Home", supplier_dashboard_path %>
            </li>
            <li class="active">
                <strong>Contacts</strong>
            </li>
            <%= link_to new_supplier_contact_path, remote: true do %>
            <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#newContact">
                <i class="fa fa-user-plus"></i>
                <strong>&nbsp;New Contact</strong>
            </button>
            <%end%>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row" id="ContactTable">
        <%= render partial: 'contacts_tables', locals: { contacts: @contacts } %>
    </div>

</div>
<div class="modal inmodal" id="newContact" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <i class="fa fa-users modal-icon" style="color:#1ab394"></i>
                <h4 class="modal-title">Add New Contact</h4>
                <span class="font-bold">Your contacts will get text message of your latest price</span>
            </br>
            <span class="font-bold">As (your fuel price + the formula). Set the Formula for them below.</span>
        </div>
        <div class="modal-body" id="ContactModelBody">
            <!--form -->
        </div>
    </div>
</div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">

$(function () {

    $('.contact-box').each(function () {
        animationHover(this, 'pulse');
    });

});

</script>

<% end %>
