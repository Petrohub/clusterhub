<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= current_user.first_name%>'s Dashboard'</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Home</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="">
          <%= link_to "New Price", new_admin_user_path, class: "btn btn-primary"%>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Email</th>
                <th>Business Name</th>
                <th>Phone Number</th>
                <th>User Type</th>
                <th>Status</th>
                <th>Action</th>

              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%=user.created_at.to_formatted_s(:short) %></td>
                <td><%=user_full_name(user)%></td>
                <td><%= user.email%></td>
                <td><%=user.business_name%></td>
                <td><%=user.phone_number%></td>
                <td><%=link_to "#{user.role}", edit_admin_user_path(user), class: "btn btn-xs btn-#{user.pending? ? 'warning' : 'info'}"%></td>
                <td><%=link_to "#{user.status}", edit_admin_user_path(user), class: "btn btn-xs btn-#{user.active? ? 'primary' : 'danger'}"%></td>
                <td><%= link_to "View", edit_admin_user_path(user), class: "btn btn-xs btn-success"%></td>
              </tr>
            </tbody>
          <%end%>
          </table>

      </div>
    </div>
  </div>
</div>
